<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # Do not rewrite API requests (let them go to the API folder/app)
  RewriteCond %{REQUEST_URI} ^/api/
  RewriteRule ^ - [L]

  # Serve index.html for all other non-file routes (SPA Support)
  RewriteRule ^index\.html$ - [L]
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule . /index.html [L]
</IfModule>
